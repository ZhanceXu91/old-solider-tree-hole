# 创建React项目
npx create-next-app@latest honey-chat --typescript --tailwind --eslint

# 进入项目目录
cd honey-chat

# 安装shadcn-ui
npx shadcn-ui@latest init

# 安装必要依赖
npm install @tanstack/react-query axios socket.io-client zustand 

mkdir server
cd server
npm init -y
npm install express cors socket.io mongoose dotenv
npm install --save-dev typescript @types/node @types/express @types/cors @types/socket.io
npm install --save-dev ts-node-dev 

npm run dev 
npm run build
npm start 